{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony",
        "ts": "ts-node"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "*.js",
        "*.html",
        "public/",
        "src/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,html,css,yaml"
}